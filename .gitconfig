[alias]
	st = status --short
	co = checkout
	ci = commit
	br = branch
	rst = reset
	rvt = revert
	rb = rebase
	rbi = rebase -i
	rbo = rebase --onto
	graph = log --graph --branches --pretty=format:'%C(bold blue)%h%C(reset) %C(dim white)(%ar)%C(reset) %C(bold green)%an%C(reset)%C(bold yellow)%d%C(reset)%n%C(white)%s%C(reset)%n'
	sw = switch
	swc = switch -c

[branch]
	sort = -committerdate

[credential]
	helper = store

[column]
	ui = auto

[init]
	defaultBranch = main

[interactive]
	diffFilter = delta --color-only

[core]
	pager = delta
	excludesFile = ~/.gitignore

[delta]
	navigate = true  # use n and N to move between diff sections

[merge]
	conflictstyle = zdiff3

[pull]
	ff = only

[push]
	autoSetupRemote = true
	useForceIfIncludes = true

[rebase]
	autoSquash = true
	autoStash = true
	rebaseMerges = true
	updateRefs = true

[rerere]
	enabled = true
	autoupdate = true

[status]
	branch = true
